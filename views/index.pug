doctype html 
html 
    head 
        title List 
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css')
    body(style="background-color:black;")
        header.jumbotron-fluid.bg-dark.p-2 
            h1.text-center.text-white.display-4 #{title}
        main
            table(class="table table-striped table-bordered table-dark")
                thead 
                    tr.bg-dark.text-light 
                        th(style="width:10%") Date
                        th(style="width:15%") Location
                        th(style="width:15%") Type
                        th(style="width:60%") Note
                tbody 
                    each data in records
                        tr 
                            td #{data.date}
                            td #{data.location}
                            td #{data.type}
                            td #{data.note}
            footer
                p.float-end.me-3 
                    a(href="/" type="button" class="btn btn-dark btn-outline-light") New
            script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js') 
            script(src='https://getbootstrap.com/docs/4.4/dist/js/bootstrap.bundle.min.js')